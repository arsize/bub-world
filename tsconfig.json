{
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "noImplicitAny": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}